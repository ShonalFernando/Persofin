<UserControl x:Class="PersofinDesktop.View.UserControls.GanntChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PersofinDesktop.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border CornerRadius="10,10,10,10" Background="#FFECEBE9">
   <ScrollViewer HorizontalScrollBarVisibility="Auto">
        <StackPanel>
            <Slider x:Name="ZoomSlider" HorizontalAlignment="Left"
        Minimum="1"
        Maximum="30"
        Value="5"
        TickFrequency="1"
        IsSnapToTickEnabled="True"
        Width="200"
        Margin="10"
        ValueChanged="ZoomSlider_ValueChanged"/>

            <StackPanel x:Name="DateHeader" Orientation="Horizontal" Margin="5"/>
            <StackPanel x:Name="TaskRows" Margin="5"/>
        </StackPanel>
    </ScrollViewer>        
    </Border>
 
</UserControl>
