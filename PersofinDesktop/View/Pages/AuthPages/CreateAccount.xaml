<Page x:Class="PersofinDesktop.View.Pages.AuthPages.CreateAccount"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PersofinDesktop.View.Pages.AuthPages"
      mc:Ignorable="d" 
            d:DesignHeight="250" d:DesignWidth="400" Background="#FFF1F1F1"
      Title="LoginPage">

    <StackPanel Margin="0">
        <TextBlock Text="Login" FontFamily="Dubai Light" FontSize="36" TextAlignment="Center" Padding="5">
            <TextBlock.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#7FD8D8D8" Offset="1"/>
                    <GradientStop Color="#7FFFFFFF" Offset="0"/>
                </LinearGradientBrush>
            </TextBlock.Background>
        </TextBlock>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Label Content="Username" Margin="0,5,0,0" Width="75"/>
            <TextBox  Margin="10,0,0,0" Width="250"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal"  HorizontalAlignment="Center" Margin="0,10,0,0">
            <Label Content="Password" Margin="0,5,0,0" Width="75"/>
            <TextBox  Margin="10,0,0,0" Width="250"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal"  HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button HorizontalAlignment="Left" Margin="25,10,0,0" Content="Login"/>
            <Button HorizontalAlignment="Left" Margin="10,10,0,0" Content="Create Account"/>
        </StackPanel>
    </StackPanel>
</Page>

